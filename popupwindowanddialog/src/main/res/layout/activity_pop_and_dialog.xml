<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE8E7"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_shape_radius"
        android:drawableEnd="@drawable/spinner_pop_down_arrow"
        android:drawableRight="@drawable/spinner_pop_down_arrow"
        android:gravity="center"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="请选择"
        android:textColor="#FFA0A0A0"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_shape_radius"
        android:drawableEnd="@drawable/date"
        android:drawableRight="@drawable/date"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:text="选择时间"
        android:textColor="#FFA0A0A0"
        android:textSize="13sp" />

</LinearLayout>